<div class="product">
    <p class="title">yourawesomeweb</p>
    <p class="sub-title">alwaysawesome</p>
    <hr>
    <p class="core-value">don't worry, be awesome</p>
    <div class="slider">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {{#content}}
                    {{#each productThumb}}
                    <div class="swiper-slide">
                        <img src="{{src}}" alt="">
                    </div>
                    {{/each}}
                {{/content}}
            </div>
            <div class="swiper-button-prev swiper-button-white swiper-btn"></div>
            <div class="swiper-button-next swiper-button-white swiper-btn"></div>
        </div>
    </div>
</div>
